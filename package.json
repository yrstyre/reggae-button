{
  "name": "reggae-button",
  "version": "1.0.0",
  "description": "Coming soon!",
  "main": "main.js",
  "scripts": {
    "dev": "npm-run-all build:dev watch",
    "build:dev": "npm-run-all -p build:js:dev build:css:dev",
    "build:prod": "npm-run-all -s build:js:prod build:css:prod",
    "build:js:prod": "browserify ./scripts/main.js | uglifyjs > ./dist/main.min.js",
    "build:js:dev": "browserify ./scripts/main.js > ./dist/main.js",
    "build:css:prod": "lessc ./style/style.less | postcss -u autoprefixer -u cssnano -o ./dist/style.css",
    "build:css:dev": "lessc ./style/style.less | postcss -u autoprefixer -o ./dist/style.css",
    "test": "ava",
    "watch": "npm-run-all -p watch:css watch:js",
    "watch:css": "nodemon -e less -w ./style -x npm run build:css:dev -C",
    "watch:js": "nodemon -e js -w ./scripts -x npm run build:js:dev -C"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yrstyre/reggae-button.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yrstyre/reggae-button/issues"
  },
  "homepage": "https://github.com/yrstyre/reggae-button#readme",
  "dependencies": {
    "autoprefixer": "^7.1.2",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "cssnano": "^3.10.0",
    "less": "^2.7.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "uglify-js": "^3.0.27"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  }
}
